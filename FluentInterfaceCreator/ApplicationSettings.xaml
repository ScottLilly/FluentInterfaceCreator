<Window x:Class="FluentInterfaceCreator.ApplicationSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resources="clr-namespace:FluentInterfaceCreator.Resources"
        mc:Ignorable="d"
        FontSize="10pt"
        Title="{Binding Source={x:Static resources:Literals.ApplicationSettings}}"
        WindowStartupLocation="CenterOwner"
        Height="300" Width="300">
    
    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="65"
                Margin="0,10,0,0"
                Content="{Binding Source={x:Static resources:Literals.OK}}"
                Click="OK_OnClick"/>

    </Grid>
    
</Window>
